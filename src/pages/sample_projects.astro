---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
---

<Layout title="Zack ZoBell Portfolio - Sample Projects">
    <ContextAlert class="mb-4" />
    <h1 class="mb-10">My Sample Projects</h1>
    <p class="mb-8">Here are some of the projects I've worked on...</p>

    <!-- Projects Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Project 1 -->
        <a href="https://example1.com" target="_blank" class="project-box relative rounded-lg overflow-hidden">
            <img src="/images/project1-image.jpg" alt="Project 1" class="object-cover w-full h-full" />
