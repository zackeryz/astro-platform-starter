---
import Layout from '../layouts/Layout.astro';

const explainer = `Hi! I'm Zack, a passionate software developer and IT professional with experience in web development, project management, and problem-solving. Explore my portfolio to see my skills, projects, and more!`;
---

<Layout title="Zack ZoBell Portfolio">
    <!-- Hero Section -->
 
	<div class="landing-page-container">
    <!-- mission statement and skills -->
	<section class="mission">
	</section>
	<section class="double">
	<section class="skills">
        <h2 class="text-3xl font-semibold text-center">Skills & Expertise</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 max-w-5xl mx-auto">
            <div class="skill text-center">
                <h3 class="font-semibold">Web Development</h3>
                <p>HTML<br>CSS<br>JavaScript<br>PHP<br>UI design</p>
            </div>
            <div class="skill text-center">
                <h3 class="font-semibold">Network Administration</h3>
                <p>LAN/WAN<br>TCP/IP<br>VPN<br>Firewalls</p>
            </div>
            <div class="skill text-center">
                <h3 class="font-semibold">Programming</h3>
                <p>C++<br>C#<br>Python<br>PHP<br>SwiftUI</p>
            </div>
        </div>
    </section>
    <section class="about">
        <h2 class="text-3xl font-semibold text-center">Relivent Experience</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 max-w-5xl mx-auto">
            <div class="">
                <h3 class="font-semibold">Pluto Micro</h3>
                <p>Working with a full support IT company as a tier 1 technition</p>
            </div><br>
            <div class="">
                <h3 class="font-semibold">Customer Service</h3>
                <p>Working as a server I servered </p>
    <!-- Portfolio Section -->
    <section class="portfolio">
        <h2 class="text-3xl font-semibold text-center">My Work</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 max-w-5xl mx-auto">
            <div class="project text-center">
                <h3 class="font-semibold">Project 1</h3>
                <p>Short description of the project</p>
                <a href="/project1" class="btn btn-primary mt-4">View Details</a>
            </div>
            <div class="project text-center">
                <h3 class="font-semibold">Project 2</h3>
                <p>Short description of the project</p>
                <a href="/project2" class="btn btn-primary mt-4">View Details</a>
            </div>
            <div class="project text-center">
                <h3 class="font-semibold">Project 3</h3>
                <p>Short description of the project</p>
                <a href="/project3" class="btn btn-primary mt-4">View Details</a>
            </div>
        </div>
    </section>
	</section>
	<div>
    <!-- Contact Section -->
    <section class="contact">
        <h2 class="text-3xl font-semibold text-center">Contact Me</h2>
        <p class="text-center mt-4">Feel free to reach out to discuss projects, opportunities, or collaborations.</p>
        <div class="text-center mt-6">
            <a href="mailto:zack@zobell.com" class="btn btn-primary">Email Me</a>
        </div>
    </section>
</Layout>
