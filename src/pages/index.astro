---
import Layout from '../layouts/Layout.astro';

const explainer = `Hi! I'm Zack, a passionate software developer and IT professional with experience in web development, project management, and problem-solving. Explore my portfolio to see my skills, projects, and more!`;
---

<Layout title="Zack ZoBell Portfolio">
    <!-- Hero Section -->
 <section class="contact-form-section py-16 px-4">
  <h2 class="text-3xl font-bold text-center mb-8">Lethbridge Transit Survey</h2>
  <form action="/redirect" method="POST" name="Transit Survey" class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg" netlify>
    <div class="mb-4">
      <label for="name" class="">Where do you live in lethbridge</label><br/>
      <label>West</label><input type="radio" id="West" name="Location"  class="" />
	  <label>North</label><input type="radio" id="North" name="Location"  class="" />
    </div>
    <div class="mb-4">
      <label for="email" class="block text-white text-lg mb-2">Your Email</label>
      <input type="email" id="email" name="email" required placeholder="Enter your email" class="w-full px-4 py-2 bg-gray-700 text-white rounded-md" />
    </div>
    <div class="mb-4">
      <label for="message" class="block text-white text-lg mb-2">Your Message</label>
      <textarea id="message" name="message" required placeholder="Enter your message" rows="5" class="w-full px-4 py-2 bg-gray-700 text-white rounded-md"></textarea>
    </div>
    <div class="flex justify-center">
      <button type="submit" class="px-8 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600 transition">Send Message</button>
    </div>
  </form>
</section>
    
</Layout>
