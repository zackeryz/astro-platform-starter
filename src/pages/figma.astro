---
import Layout from '../layouts/Layout.astro';
import resume from '../assets/figma.pdf';
---

<Layout title="Zack ZoBell Portfolio - Resume">
    <!-- Alert (if applicable) -->
    <h1 class="mb-10">Summit Explorer Figma Mockup</h1>

    <!-- Download Button -->
    <div class="flex justify-center mb-6">
        <a href={resume} download class="btn btn-primary px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition">
            Download PDF
        </a>
    </div>

    <!-- Embedded Resume -->
    <embed 
        src={resume} 
        type="application/pdf" 
        width="100%" 
        height="1100px" 
        class="rounded-lg shadow-lg"
    />
</Layout>
