---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
---

<Layout title="Zack ZoBell Portfolio - Contact">
    <ContextAlert class="mb-4" />
    
<section class="contact-form-section py-16 px-4">
  <h2 class="text-3xl font-bold text-center mb-8">Contact Me</h2>
  <form action=".../src/pages/index.astro" method="POST" class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg" netlify>
    <div class="mb-4">
      <label for="name" class="block text-white text-lg mb-2">Your Name</label>
      <input type="text" id="name" name="name" required placeholder="Enter your name" class="w-full px-4 py-2 bg-gray-700 text-white rounded-md" />
    </div>
    <div class="mb-4">
      <label for="email" class="block text-white text-lg mb-2">Your Email</label>
      <input type="email" id="email" name="email" required placeholder="Enter your email" class="w-full px-4 py-2 bg-gray-700 text-white rounded-md" />
    </div>
    <div class="mb-4">
      <label for="message" class="block text-white text-lg mb-2">Your Message</label>
      <textarea id="message" name="message" required placeholder="Enter your message" rows="5" class="w-full px-4 py-2 bg-gray-700 text-white rounded-md"></textarea>
    </div>
    <div class="flex justify-center">
      <button type="submit" class="px-8 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600 transition">Send Message</button>
    </div>
  </form>
</section>

    <p class="mb-8">Feel free to reach out through the following channels:</p>
    <!-- Add your contact details here -->
    <ul>
        <li>Email: zack@zobell.com</li>
        <li>Phone: (403) 393-****</li>
    </ul>
</Layout>
