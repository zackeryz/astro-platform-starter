---
import Layout from '../layouts/Layout2.astro';

const explainer = `Hi! I'm Zack, a passionate software developer and IT professional with experience in web development, project management, and problem-solving. Explore my portfolio to see my skills, projects, and more!`;
---

<Layout title="Lethbridge Student Survey">
    <!-- Hero Section -->
 <section class="contact-form-section py-16 px-4">
  <h2 class="text-3xl font-bold text-center mb-8">Lethbridge Transit Survey</h2>
  <form action="/redirect" method="POST" name="Transit Survey" class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-lg shadow-lg" netlify>
    <!-- Question 1 -->
    <div class="mb-4">
      <label for="location" class="block text-white text-lg mb-2">Where do you live in Lethbridge?</label>
      <label><input type="radio" id="North Side" name="Location" value="North Side" class="mr-2" /> North Side</label><br/>
      <label><input type="radio" id="East Side" name="Location" value="East Side" class="mr-2" /> East Side</label><br/>
      <label><input type="radio" id="South Side" name="Location" value="South Side" class="mr-2" /> South Side</label><br/>
      <label><input type="radio" id="West Side" name="Location" value="West Side" class="mr-2" /> West Side</label><br/>
      <label><input type="radio" id="Outside of Lethbridge" name="Location" value="Outside of Lethbridge" class="mr-2" /> Outside of Lethbridge</label><br/>
      <label><input type="radio" id="Other" name="Location" value="Other" class="mr-2" /> Other</label>
    </div>

    <!-- Question 2 -->
    <div class="mb-4">
      <label for="frequency" class="block text-white text-lg mb-2">How often do you take Lethbridge Transit?</label>
      <label><input type="radio" id="Never" name="Frequency" value="Never" class="mr-2" /> Never</label><br/>
      <label><input type="radio" id="Once a month" name="Frequency" value="Once a month" class="mr-2" /> Once a month</label><br/>
      <label><input type="radio" id="Once a week" name="Frequency" value="Once a week" class="mr-2" /> Once a week</label><br/>
      <label><input type="radio" id="Multiple times a week" name="Frequency" value="Multiple times a week" class="mr-2" /> Multiple times a week</label><br/>
      <label><input type="radio" id="Every day" name="Frequency" value="Every day" class="mr-2" /> Every day</label>
    </div>

    <!-- Question 3 -->
    <div class="mb-4">
      <label for="walking_time" class="block text-white text-lg mb-2">How long does it take you to walk to the closest bus station to your house?</label>
      <label><input type="radio" id="1-2 minutes" name="WalkingTime" value="1-2 minutes" class="mr-2" /> 1-2 minutes</label><br/>
      <label><input type="radio" id="3-5 minutes" name="WalkingTime" value="3-5 minutes" class="mr-2" /> 3-5 minutes</label><br/>
      <label><input type="radio" id="5-10 minutes" name="WalkingTime" value="5-10 minutes" class="mr-2" /> 5-10 minutes</label><br/>
      <label><input type="radio" id="11-20 minutes" name="WalkingTime" value="11-20 minutes" class="mr-2" /> 11-20 minutes</label><br/>
      <label><input type="radio" id="21-30 minutes" name="WalkingTime" value="21-30 minutes" class="mr-2" /> 21-30 minutes</label><br/>
      <label><input type="radio" id="More than 30 minutes" name="WalkingTime" value="More than 30 minutes" class="mr-2" /> More than 30 minutes</label><br/>
      <label><input type="radio" id="Other" name="WalkingTime" value="Other" class="mr-2" /> Other</label>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-center">
      <button type="submit" class="px-8 py-2 bg-blue-500 text-white font-bold rounded-md hover:bg-blue-600 transition">Submit</button>
    </div>
  </form>
</section>
    
</Layout>
